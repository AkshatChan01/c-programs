{
 int n;
 printf("Enter the length of array: ");
 scanf("%d",&n);
 int a[n];
 for(int i=0; i<n; i++) 
{
  printf("Enter element %d:", i + 1);
  scanf("%d",&a[i]); 
}
int K=0, even_sum = 0;
while (K<n) 
{
 even sum = even_sum + a[K];
 K=K+2;
}
printf ("%d", even_sum);
int m=1, odd_sum = 0;
while (m<n) 
{
 odd_sum = odd_sum + a[m];
 m=m+2;
}
printf("%d", odd_sum);
int diff;
diff = even_sum - odd_sum;
printf("%d", diff);
return 0;
}



